{
  "name": "oficina-mecanica-api",
  "version": "1.0.0",
  "description": "API para gerenciamento de oficina mec√¢nica",
  "main": "dist/server.js",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "prepare": "husky",
    "check": "eslint . --ext .ts",
    "check:fix": "eslint . --ext .ts  --fix",
    "test": "vitest run --config vitest.config.mts",
    "test:watch": "vitest watch --config vitest.config.mts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:order": "vitest run --config vitest.config.order.mts"
  },
  "keywords": [
    "fastify",
    "prisma",
    "typescript",
    "oficina",
    "mecanica"
  ],
  "author": "Richard Lirio",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.0.10",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prisma": "^6.11.1",
    "supertest": "^7.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
