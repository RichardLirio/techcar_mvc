    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.11.1",
    "@types/supertest": "^6.0.3",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.1.0",
    "fastify": "^5.4.0",
    "pino-pretty": "^13.0.0",
